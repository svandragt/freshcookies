{
  "manifest_version": 2,
  "name": "Fresh Cookies",
  "description": "Limit the maximum age of web cookies for your privacy benefit.",
  "version": "0.3.1",

  "applications": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [ "cookies", "http://*/*", "https://*/*" ]
}